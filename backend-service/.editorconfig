root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.yml]
indent_size = 2
